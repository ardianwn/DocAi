# DocAI Production Environment Configuration

# LLM Provider Configuration
LLM_PROVIDER=openai
OPENAI_API_KEY=your_production_openai_api_key_here

# Embedding Configuration  
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small

# Chat Model Configuration
LLM_MODEL=gpt-3.5-turbo

# Qdrant Configuration (Production)
QDRANT_HOST=qdrant-production.example.com
QDRANT_PORT=6333
QDRANT_API_KEY=your_production_qdrant_api_key_here
QDRANT_USE_TLS=true

# FastAPI Configuration (Production)
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
LOG_LEVEL=WARNING

# CORS Configuration (Production)
FRONTEND_ORIGINS=https://your-docai-domain.com

# Security (Production)
SECRET_KEY=your_very_secure_secret_key_for_production_change_this
JWT_SECRET_KEY=your_jwt_secret_key_for_production

# Database/Vector Store
COLLECTION_NAME=documents_prod
VECTOR_SIZE=1536

# File Storage (Production)
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=52428800
ALLOWED_EXTENSIONS=pdf,txt,doc,docx

# Performance Configuration
MAX_WORKERS=4
TIMEOUT=300
MAX_REQUESTS_PER_MINUTE=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090