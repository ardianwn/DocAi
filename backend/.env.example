# LLM Provider Configuration (ollama, openai, huggingface)
LLM_PROVIDER=ollama
LLM_MODEL=llama2

# Embedding Provider Configuration (ollama, openai, huggingface)
EMBEDDING_PROVIDER=ollama
EMBEDDING_MODEL=nomic-embed-text

# OpenAI Configuration (required if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (required if using Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# HuggingFace Configuration (optional)
HUGGINGFACE_HUB_TOKEN=your_huggingface_token_here

# Qdrant Configuration  
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_here

# FastAPI Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
LOG_LEVEL=INFO

# CORS Configuration - Restrict to frontend domain only
FRONTEND_ORIGINS=http://localhost:3000,http://frontend:3000

# Security
SECRET_KEY=your_secret_key_here_change_in_production

# Database/Vector Store
COLLECTION_NAME=documents
VECTOR_SIZE=768

# File Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=52428800
ALLOWED_EXTENSIONS=pdf,txt,doc,docx

# RAG Configuration
MAX_CHAT_HISTORY=10
RETRIEVAL_TOP_K=5
CHUNK_SIZE=1000
CHUNK_OVERLAP=200